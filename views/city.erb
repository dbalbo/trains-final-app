<h1><%= @city.name() %></h1>

  <h3>Select all trains that service this city:</h3>

  <% if @trains.any?() %>
    <form action="/c_update/<%= @city.id %>" method="post">
      <input type="hidden" name="_method" value="patch">
      <% @trains.each() do |train| %>
        <div class="checkbox">
          <label>
            <input type="checkbox" name="train_ids[]" value="<%= train.id() %>"><%= train.name() %>
          </label>
        </div>
      <% end %>

      <button type="submit">Update Trains</button>
    </form>
  <% end %>

  <form action="/c_update/<%= @city.id() %>" method="post">
    <input name="_method" type="hidden" value="delete">

    <button type="submit">Delete City</button>
  </form>


  <% if @city.trains().any?() %>

    <h3>Here are all the Train route that service this city:</h3>

    <ul>
      <% @city.trains().each() do |train| %>
        <li><%= train.name() %></li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no trains yet!</p>
  <% end %>

  <a href="/">Return to Main Page</a>
